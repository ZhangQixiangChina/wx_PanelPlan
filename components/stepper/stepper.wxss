.root {
    display: flex;
    flex-direction: row;
    align-items: center;
    border: 1rpx solid #bbb;
    border-radius: 8rpx;
}

.operator {
    padding: 10rpx 30rpx 12rpx 30rpx;
    font-size: 32rpx;
}

.operator.disable {
    background-color: #f1f1f1;
    color: #ababab
}

.minus {
    border-radius: 8rpx 0 0 8rpx;
}

.plus {
    border-radius: 0 8rpx 8rpx 0;
}

.step {
    padding: 10rpx 32rpx 10rpx 32rpx;
    border-left: 1rpx solid #bbb;
    border-right: 1rpx solid #bbb;
}
